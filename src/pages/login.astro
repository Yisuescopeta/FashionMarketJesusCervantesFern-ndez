---
// Página de inicio de sesión para usuarios normales
// Solo accesible si el usuario no está autenticado
import PublicLayout from "../layouts/PublicLayout.astro";
import { User, Mail, Lock } from "lucide-react";

export const prerender = false;
---

<PublicLayout title="Iniciar Sesión">
    <div class="min-h-[80vh] flex items-center justify-center px-6 py-24">
        <div class="max-w-md w-full">
            <div class="text-center mb-10">
                <h2 class="text-[10px] uppercase tracking-[0.4em] text-brand-gold font-bold mb-4">
                    Bienvenido
                </h2>
                <h1 class="text-4xl font-serif italic mb-2">Iniciar Sesión</h1>
                <p class="text-slate-400 text-sm">
                    Accede a tu cuenta para gestionar tus pedidos
                </p>
            </div>

            <div class="bg-white border border-slate-100 shadow-sm p-8">
                <!-- Botón de Google OAuth -->
                <button
                    id="google-btn"
                    type="button"
                    class="w-full flex items-center justify-center gap-3 border-2 border-slate-200 py-4 px-6 font-medium text-slate-700 hover:bg-slate-50 hover:border-slate-300 transition-all duration-300 mb-6"
                >
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Continuar con Google</span>
                </button>

                <!-- Separador -->
                <div class="relative mb-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-200"></div>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                        <span class="bg-white px-4 text-slate-400 tracking-widest">o con email</span>
                    </div>
                </div>

                <form id="login-form" class="space-y-6">
                    <div class="space-y-2">
                        <label class="text-[10px] uppercase tracking-widest font-bold text-slate-500">
                            Correo Electrónico
                        </label>
                        <div class="relative">
                            <Mail className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300" />
                            <input
                                type="email"
                                name="email"
                                required
                                class="w-full border border-slate-200 p-3 pl-12 focus:ring-2 focus:ring-brand-gold focus:border-brand-gold outline-none transition"
                                placeholder="tu@email.com"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] uppercase tracking-widest font-bold text-slate-500">
                            Contraseña
                        </label>
                        <div class="relative">
                            <Lock className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300" />
                            <input
                                type="password"
                                name="password"
                                required
                                class="w-full border border-slate-200 p-3 pl-12 focus:ring-2 focus:ring-brand-gold focus:border-brand-gold outline-none transition"
                                placeholder="••••••••"
                            />
                        </div>
                    </div>

                    <div id="error-msg" class="text-red-500 text-xs italic text-center hidden"></div>

                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full bg-brand-navy text-white py-4 font-bold uppercase tracking-widest text-sm hover:bg-black transition-all duration-300"
                    >
                        Entrar
                    </button>
                </form>

                <div class="mt-8 pt-6 border-t border-slate-100 text-center">
                    <p class="text-sm text-slate-500">
                        ¿No tienes cuenta?
                        <a href="/registro" class="text-brand-gold font-bold hover:underline ml-1">
                            Crear cuenta
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</PublicLayout>

<script>
    import { supabase } from "../lib/supabase";

    const form = document.getElementById("login-form") as HTMLFormElement;
    const errorMsg = document.getElementById("error-msg");
    const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
    const googleBtn = document.getElementById("google-btn") as HTMLButtonElement;

    // Función para guardar token en cookie HTTP
    function setAuthCookie(accessToken: string, refreshToken: string) {
        const maxAge = 60 * 60 * 24 * 7; // 7 días
        document.cookie = `sb-access-token=${accessToken}; path=/; max-age=${maxAge}; SameSite=Lax`;
        document.cookie = `sb-refresh-token=${refreshToken}; path=/; max-age=${maxAge}; SameSite=Lax`;
    }

    // Verificar si ya está autenticado
    async function checkAuth() {
        const { data: { session } } = await supabase.auth.getSession();
        if (session) {
            setAuthCookie(session.access_token, session.refresh_token);
            const urlParams = new URLSearchParams(window.location.search);
            const redirect = urlParams.get("redirect");
            if (redirect) {
                window.location.href = redirect;
            }
        }
    }
    checkAuth();

    // Login con Google OAuth
    googleBtn?.addEventListener("click", async () => {
        googleBtn.disabled = true;
        googleBtn.innerHTML = `
            <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Conectando...</span>
        `;

        // Obtener la URL de redirección para después del login
        const urlParams = new URLSearchParams(window.location.search);
        const redirectTo = urlParams.get("redirect") || "/";

        const { error } = await supabase.auth.signInWithOAuth({
            provider: 'google',
            options: {
                redirectTo: `${window.location.origin}/auth/callback?redirect=${encodeURIComponent(redirectTo)}`,
            }
        });

        if (error) {
            console.error("Error con Google OAuth:", error);
            googleBtn.disabled = false;
            googleBtn.innerHTML = `
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span>Continuar con Google</span>
            `;
            if (errorMsg) {
                errorMsg.textContent = "Error al conectar con Google. Inténtalo de nuevo.";
                errorMsg.classList.remove("hidden");
            }
        }
    });

    // Login con email/contraseña
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        submitBtn.disabled = true;
        submitBtn.textContent = "Procesando...";
        
        const formData = new FormData(form);
        const email = formData.get("email") as string;
        const password = formData.get("password") as string;

        const { data, error } = await supabase.auth.signInWithPassword({
            email,
            password,
        });

        if (error) {
            if (errorMsg) {
                errorMsg.textContent = "Credenciales incorrectas. Verifica tu email y contraseña.";
                errorMsg.classList.remove("hidden");
            }
            submitBtn.disabled = false;
            submitBtn.textContent = "Entrar";
        } else if (data.session) {
            setAuthCookie(data.session.access_token, data.session.refresh_token);
            const urlParams = new URLSearchParams(window.location.search);
            const redirect = urlParams.get("redirect") || "/";
            window.location.href = redirect;
        }
    });
</script>
