---
// Página de administración para gestionar las ofertas flash
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabaseAdmin } from "../../lib/supabase";
import {
    Zap,
    Settings,
    Package,
    Trash2,
    ArrowRight,
    Tag,
    Info,
} from "lucide-react";

export const prerender = false;

// Obtener configuración actual
const { data: settings } = await supabaseAdmin
    .from("site_settings")
    .select("*")
    .eq("id", "main")
    .single();

// Obtener productos en oferta
const { data: saleProducts } = await supabaseAdmin
    .from("products")
    .select("*, categories(name)")
    .eq("is_on_sale", true)
    .order("updated_at", { ascending: false });

// Obtener todos los productos para poder añadirlos a ofertas
const { data: allProducts } = await supabaseAdmin
    .from("products")
    .select("id, name, price, stock, is_on_sale")
    .eq("is_active", true)
    .order("name");
---

<AdminLayout title="Ofertas Flash">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-800 font-serif italic">
            Gestión de Ofertas Flash
        </h1>
        <p class="text-sm text-slate-500">
            Controla las promociones temporales y la visibilidad de descuentos.
        </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Panel de Control Principal -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Interruptor Principal de Ofertas -->
            <div
                class="bg-gradient-to-r from-orange-500 to-red-600 rounded-3xl p-8 shadow-xl shadow-orange-500/20 relative overflow-hidden group"
            >
                <div
                    class="absolute -right-4 -top-4 opacity-10 group-hover:opacity-20 transition-opacity"
                >
                    <Zap className="w-48 h-48 text-white" />
                </div>

                <div
                    class="relative z-10 flex flex-col md:flex-row md:items-center justify-between gap-6"
                >
                    <div class="flex items-center gap-5">
                        <div
                            class="w-16 h-16 bg-white/20 backdrop-blur-md rounded-2xl flex items-center justify-center border border-white/30"
                        >
                            <Zap className="w-8 h-8 text-white" />
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-white mb-1">
                                Estado de la Sección
                            </h3>
                            <p class="text-white/80 text-sm max-w-sm">
                                Controla si el bloque de ofertas flash aparece
                                en la página de inicio para los clientes.
                            </p>
                        </div>
                    </div>

                    <div
                        class="flex items-center gap-4 bg-white/10 backdrop-blur-sm px-6 py-4 rounded-2xl border border-white/20"
                    >
                        <span
                            id="status-text"
                            class="text-xs font-bold text-white uppercase tracking-widest"
                        >
                            {settings?.show_flash_sales ? "Activo" : "Inactivo"}
                        </span>
                        <button
                            id="toggle-sales"
                            data-active={settings?.show_flash_sales
                                ? "true"
                                : "false"}
                            class="relative inline-flex items-center h-7 w-12 cursor-pointer rounded-full transition-colors focus:outline-none"
                            style={{
                                backgroundColor: settings?.show_flash_sales
                                    ? "rgba(255,255,255,0.4)"
                                    : "rgba(0,0,0,0.2)",
                            }}
                        >
                            <span
                                class={`inline-block h-5 w-5 transform rounded-full bg-white transition-transform duration-200 ease-in-out ${settings?.show_flash_sales ? "translate-x-6" : "translate-x-1"}`}
                            ></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Productos en Oferta Actualmente -->
            <div
                class="bg-white rounded-3xl p-8 border border-slate-100 shadow-sm border-t-4 border-t-orange-500"
            >
                <div class="flex justify-between items-center mb-8">
                    <div class="flex items-center gap-3">
                        <div
                            class="w-10 h-10 bg-orange-50 rounded-xl flex items-center justify-center"
                        >
                            <Tag className="w-5 h-5 text-orange-500" />
                        </div>
                        <h3 class="text-lg font-bold text-slate-800">
                            Productos en Oferta ({saleProducts?.length || 0})
                        </h3>
                    </div>
                </div>

                {
                    saleProducts && saleProducts.length > 0 ? (
                        <div class="overflow-x-auto -mx-2">
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b border-slate-50">
                                        <th class="text-left py-4 px-4 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic">
                                            Producto
                                        </th>
                                        <th class="text-left py-4 px-4 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic">
                                            Precio Original
                                        </th>
                                        <th class="text-left py-4 px-4 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic">
                                            Oferta
                                        </th>
                                        <th class="text-left py-4 px-4 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic">
                                            Dto.
                                        </th>
                                        <th class="text-right py-4 px-4 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic">
                                            Acciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-50">
                                    {saleProducts.map((product) => {
                                        const discount = product.sale_price
                                            ? Math.round(
                                                  (1 -
                                                      product.sale_price /
                                                          product.price) *
                                                      100,
                                              )
                                            : 0;
                                        return (
                                            <tr class="group hover:bg-slate-50/50 transition-colors">
                                                <td class="py-4 px-4">
                                                    <div class="flex items-center gap-4">
                                                        <div class="w-12 h-12 bg-slate-50 rounded-xl overflow-hidden shadow-sm border border-slate-100 flex-shrink-0 group-hover:scale-105 transition-transform duration-500">
                                                            {product
                                                                .images?.[0] && (
                                                                <img
                                                                    src={
                                                                        product
                                                                            .images[0]
                                                                    }
                                                                    alt=""
                                                                    class="w-full h-full object-cover"
                                                                />
                                                            )}
                                                        </div>
                                                        <div>
                                                            <p class="font-bold text-slate-800 text-sm line-clamp-1">
                                                                {product.name}
                                                            </p>
                                                            <p class="text-[10px] text-slate-400 font-bold uppercase tracking-wider">
                                                                {
                                                                    product
                                                                        .categories
                                                                        ?.name
                                                                }
                                                            </p>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="py-4 px-4 text-xs font-medium text-slate-400 line-through decoration-slate-300">
                                                    {(
                                                        product.price / 100
                                                    ).toFixed(2)}
                                                    €
                                                </td>
                                                <td class="py-4 px-4 text-sm font-bold text-orange-600">
                                                    {product.sale_price
                                                        ? `${(product.sale_price / 100).toFixed(2)}€`
                                                        : "-"}
                                                </td>
                                                <td class="py-4 px-4">
                                                    <span class="bg-orange-100 text-orange-600 px-2 py-0.5 rounded-full text-[10px] font-bold">
                                                        -{discount}%
                                                    </span>
                                                </td>
                                                <td class="py-4 px-4 text-right">
                                                    <button
                                                        class="remove-sale-btn p-2 text-slate-300 hover:text-red-500 hover:bg-red-50 rounded-lg transition-all active:scale-95"
                                                        data-id={product.id}
                                                        title="Quitar oferta"
                                                    >
                                                        <Trash2 className="w-4 h-4" />
                                                    </button>
                                                </td>
                                            </tr>
                                        );
                                    })}
                                </tbody>
                            </table>
                        </div>
                    ) : (
                        <div class="text-center py-16 bg-slate-50 rounded-2xl border border-dashed border-slate-200">
                            <Tag className="w-12 h-12 text-slate-200 mx-auto mb-4" />
                            <p class="text-slate-400 text-sm italic">
                                No hay productos en oferta actualmente.
                            </p>
                        </div>
                    )
                }
            </div>
        </div>

        <!-- Sidebar de Configuración -->
        <div class="space-y-8">
            <!-- Configuración de Títulos -->
            <div
                class="bg-white rounded-3xl p-8 border border-slate-100 shadow-sm"
            >
                <div class="flex items-center gap-3 mb-6">
                    <div
                        class="w-8 h-8 bg-slate-50 rounded-lg flex items-center justify-center"
                    >
                        <Settings className="w-4 h-4 text-slate-500" />
                    </div>
                    <h3 class="text-lg font-bold text-slate-800">
                        Visualización
                    </h3>
                </div>

                <form id="settings-form" class="space-y-6">
                    <div>
                        <label
                            class="text-[10px] uppercase tracking-widest font-bold text-slate-500 block mb-2"
                        >
                            Título de la Sección
                        </label>
                        <input
                            type="text"
                            name="title"
                            value={settings?.flash_sales_title ||
                                "¡Ofertas Flash!"}
                            class="w-full border border-slate-200 rounded-xl p-3 focus:ring-2 focus:ring-brand-gold outline-none text-sm transition-all"
                        />
                    </div>
                    <div>
                        <label
                            class="text-[10px] uppercase tracking-widest font-bold text-slate-500 block mb-2"
                        >
                            Subtítulo
                        </label>
                        <input
                            type="text"
                            name="subtitle"
                            value={settings?.flash_sales_subtitle ||
                                "Descuentos por tiempo limitado"}
                            class="w-full border border-slate-200 rounded-xl p-3 focus:ring-2 focus:ring-brand-gold outline-none text-sm transition-all"
                        />
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-slate-900 text-white px-8 py-3.5 rounded-full font-bold uppercase tracking-widest text-[10px] hover:bg-black transition-all shadow-lg active:scale-95"
                    >
                        Guardar Cambios
                    </button>
                </form>
            </div>

            <!-- Añadir Producto a Ofertas -->
            <div
                class="bg-white rounded-3xl p-8 border border-slate-100 shadow-sm"
            >
                <div class="flex items-center gap-3 mb-6">
                    <div
                        class="w-8 h-8 bg-amber-50 rounded-lg flex items-center justify-center"
                    >
                        <Package className="w-4 h-4 text-brand-gold" />
                    </div>
                    <h3 class="text-lg font-bold text-slate-800">
                        Nueva Oferta
                    </h3>
                </div>

                <form id="add-sale-form" class="space-y-6">
                    <div>
                        <label
                            class="text-[10px] uppercase tracking-widest font-bold text-slate-500 block mb-2"
                        >
                            Producto
                        </label>
                        <select
                            name="product_id"
                            class="w-full border border-slate-200 rounded-xl p-3 focus:ring-2 focus:ring-brand-gold outline-none bg-white text-sm cursor-pointer appearance-none"
                            required
                        >
                            <option value="">Selecciona...</option>
                            {
                                allProducts
                                    ?.filter((p) => !p.is_on_sale)
                                    .map((product) => (
                                        <option value={product.id}>
                                            {product.name} (
                                            {(product.price / 100).toFixed(2)}€)
                                        </option>
                                    ))
                            }
                        </select>
                    </div>
                    <div>
                        <label
                            class="text-[10px] uppercase tracking-widest font-bold text-slate-500 block mb-2"
                        >
                            Precio de Oferta (€)
                        </label>
                        <div class="relative">
                            <input
                                type="number"
                                name="sale_price"
                                step="0.01"
                                min="0.01"
                                placeholder="Ej: 29.99"
                                class="w-full border border-slate-200 rounded-xl p-3 focus:ring-2 focus:ring-brand-gold outline-none text-sm pr-10"
                                required
                            />
                            <span
                                class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 font-bold text-xs italic"
                                >€</span
                            >
                        </div>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-orange-600 text-white px-6 py-3.5 rounded-full font-bold uppercase tracking-widest text-[10px] hover:bg-orange-700 transition-all shadow-lg shadow-orange-100 active:scale-95"
                    >
                        Activar Oferta
                    </button>
                </form>
            </div>

            <div class="bg-slate-50 rounded-3xl p-6 border border-slate-100">
                <div class="flex items-center gap-2 mb-4">
                    <Info className="w-4 h-4 text-slate-400" />
                    <span
                        class="text-[10px] font-bold text-slate-400 uppercase tracking-widest"
                        >Consejo</span
                    >
                </div>
                <p class="text-xs text-slate-500 leading-relaxed">
                    Las ofertas flash suelen durar entre 24 y 48 horas.
                    Asegúrate de promocionarlas por correo a tus suscriptores
                    para maximizar las ventas.
                </p>
                <a
                    href="/admin/correos"
                    class="inline-flex items-center gap-2 mt-4 text-[10px] font-bold text-brand-gold uppercase tracking-widest hover:gap-3 transition-all"
                >
                    Ir a Marketing <ArrowRight className="w-3 h-3" />
                </a>
            </div>
        </div>
    </div>
</AdminLayout>

<script>
    import { supabase } from "../../lib/supabase";

    // Toggle de ofertas
    const toggleBtn = document.getElementById("toggle-sales");

    toggleBtn?.addEventListener("click", async () => {
        const isActive = toggleBtn.dataset.active === "true";
        const newState = !isActive;

        const { error } = await supabase
            .from("site_settings")
            .update({
                show_flash_sales: newState,
                updated_at: new Date().toISOString(),
            })
            .eq("id", "main");

        if (!error) {
            window.location.reload();
        }
    });

    // Guardar configuración
    const settingsForm = document.getElementById(
        "settings-form",
    ) as HTMLFormElement;
    settingsForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(settingsForm);

        const { error } = await supabase
            .from("site_settings")
            .update({
                flash_sales_title: formData.get("title"),
                flash_sales_subtitle: formData.get("subtitle"),
                updated_at: new Date().toISOString(),
            })
            .eq("id", "main");

        if (!error) {
            const btn = (e.target as HTMLFormElement).querySelector("button");
            if (btn) {
                const originalText = btn.textContent;
                btn.textContent = "¡GUARDADO!";
                btn.classList.replace("bg-slate-900", "bg-emerald-500");
                setTimeout(() => {
                    btn.textContent = originalText;
                    btn.classList.replace("bg-emerald-500", "bg-slate-900");
                }, 2000);
            }
        } else {
            alert("Error al guardar: " + error.message);
        }
    });

    // Añadir producto a ofertas
    const addSaleForm = document.getElementById(
        "add-sale-form",
    ) as HTMLFormElement;
    addSaleForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(addSaleForm);
        const productId = formData.get("product_id");
        const salePrice =
            parseFloat(formData.get("sale_price") as string) * 100; // Convertir a céntimos

        const { error } = await supabase
            .from("products")
            .update({
                is_on_sale: true,
                sale_price: Math.round(salePrice),
                updated_at: new Date().toISOString(),
            })
            .eq("id", productId);

        if (!error) {
            window.location.reload();
        } else {
            alert("Error: " + error.message);
        }
    });

    // Quitar producto de ofertas
    document.querySelectorAll(".remove-sale-btn").forEach((btn) => {
        btn.addEventListener("click", async () => {
            if (!confirm("¿Quitar este producto de la sección de ofertas?"))
                return;

            const productId = (btn as HTMLElement).dataset.id;

            const { error } = await supabase
                .from("products")
                .update({
                    is_on_sale: false,
                    sale_price: null,
                    updated_at: new Date().toISOString(),
                })
                .eq("id", productId);

            if (!error) {
                window.location.reload();
            } else {
                alert("Error: " + error.message);
            }
        });
    });
</script>
