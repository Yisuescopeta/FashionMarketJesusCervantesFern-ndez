---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabaseAdmin } from "../../lib/supabase";
import {
    Users,
    Search,
    Mail,
    Calendar,
    ShoppingBag,
    ArrowUpRight,
    ChevronLeft,
    ChevronRight,
    UserCircle,
} from "lucide-react";

export const prerender = false;

// Paginación
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get("page") || "1");
const pageSize = 12;
const from = (page - 1) * pageSize;
const to = from + pageSize - 1;

// Búsqueda
const searchFilter = url.searchParams.get("search") || "";

// Consulta
let query = supabaseAdmin
    .from("profiles")
    .select("*, user_notification_preferences(marketing_emails)", {
        count: "exact",
    })
    .order("created_at", { ascending: false });

if (searchFilter) {
    query = query.or(
        `full_name.ilike.%${searchFilter}%,email.ilike.%${searchFilter}%`,
    );
}

const { data: clients, count } = await query.range(from, to);

const totalPages = Math.ceil((count || 0) / pageSize);
---

<AdminLayout title="Clientes">
    <div
        class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8"
    >
        <div>
            <h1 class="text-2xl font-bold text-slate-800 font-serif italic">
                Base de Clientes
            </h1>
            <p class="text-sm text-slate-500">
                Gestiona los usuarios registrados y sus preferencias de
                marketing.
            </p>
        </div>

        <div
            class="bg-white px-4 py-2 rounded-2xl border border-slate-100 flex items-center gap-2 shadow-sm italic text-xs font-bold text-slate-500"
        >
            <Users className="w-4 h-4 text-brand-gold" />
            <span>Usuarios: {count || 0}</span>
        </div>
    </div>

    <!-- Buscador -->
    <div
        class="bg-white rounded-3xl p-4 border border-slate-100 shadow-sm mb-8"
    >
        <form class="relative">
            <Search
                className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400"
            />
            <input
                type="text"
                name="search"
                value={searchFilter}
                placeholder="Buscar por nombre o email..."
                class="w-full bg-slate-50 border-none rounded-2xl py-3 pl-11 pr-4 text-sm focus:ring-2 focus:ring-brand-gold transition-all"
            />
            <button type="submit" class="hidden">Buscar</button>
        </form>
    </div>

    <!-- Grid de Clientes -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        {
            clients?.map((client) => (
                <div class="bg-white rounded-3xl p-6 border border-slate-100 shadow-sm hover:shadow-md transition-all group relative overflow-hidden">
                    <div class="absolute -top-4 -right-4 w-24 h-24 bg-slate-50 rounded-full opacity-0 group-hover:opacity-100 transition-opacity -z-10" />

                    <div class="flex items-start gap-4 mb-6">
                        <div class="w-14 h-14 bg-slate-50 rounded-2xl border border-slate-100 flex items-center justify-center text-slate-400 group-hover:bg-amber-50 group-hover:border-amber-100 group-hover:text-brand-gold transition-all duration-500">
                            {client.avatar_url ? (
                                <img
                                    src={client.avatar_url}
                                    alt=""
                                    class="w-full h-full object-cover rounded-2xl"
                                />
                            ) : (
                                <UserCircle className="w-8 h-8" />
                            )}
                        </div>
                        <div class="flex-1">
                            <h3 class="font-bold text-slate-800 line-clamp-1">
                                {client.full_name || "Sin nombre"}
                            </h3>
                            <p class="text-xs text-slate-400 italic truncate">
                                {client.email}
                            </p>
                        </div>
                    </div>

                    <div class="space-y-3 mb-6">
                        <div class="flex items-center justify-between text-[10px] font-medium text-slate-400 uppercase tracking-widest italic">
                            <span class="flex items-center gap-1.5">
                                <Calendar className="w-3 h-3" /> Registro
                            </span>
                            <span class="text-slate-600 font-bold">
                                {new Date(
                                    client.created_at,
                                ).toLocaleDateString()}
                            </span>
                        </div>
                        <div class="flex items-center justify-between text-[10px] font-medium text-slate-400 uppercase tracking-widest italic">
                            <span class="flex items-center gap-1.5">
                                <Mail className="w-3 h-3" /> Marketing
                            </span>
                            <span
                                class={
                                    client.user_notification_preferences?.[0]
                                        ?.marketing_emails
                                        ? "text-emerald-500 font-bold"
                                        : "text-slate-300 font-bold"
                                }
                            >
                                {client.user_notification_preferences?.[0]
                                    ?.marketing_emails
                                    ? "Suscrito"
                                    : "No"}
                            </span>
                        </div>
                    </div>

                    <div class="pt-4 border-t border-slate-50 flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 bg-slate-50 rounded-lg flex items-center justify-center">
                                <ShoppingBag className="w-3.5 h-3.5 text-slate-400" />
                            </div>
                            <span class="text-xs font-bold text-slate-700 italic">
                                -- Pedidos
                            </span>
                        </div>
                        <button class="text-[10px] font-bold text-brand-gold uppercase tracking-widest flex items-center gap-1 hover:gap-2 transition-all">
                            Ver ficha <ArrowUpRight className="w-3 h-3" />
                        </button>
                    </div>
                </div>
            ))
        }
    </div>

    {
        (!clients || clients.length === 0) && (
            <div class="bg-white rounded-3xl p-16 text-center border border-slate-100 shadow-sm italic">
                <Users className="w-12 h-12 text-slate-200 mx-auto mb-4" />
                <p class="text-slate-400 text-sm">
                    No se encontraron clientes para esta búsqueda.
                </p>
            </div>
        )
    }

    <!-- Paginación -->
    {
        totalPages > 1 && (
            <div class="flex items-center justify-between bg-white px-8 py-4 rounded-3xl border border-slate-100 shadow-sm italic">
                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                    Página {page} de {totalPages}
                </span>

                <div class="flex items-center gap-2">
                    {page > 1 && (
                        <a
                            href={`?page=${page - 1}&search=${searchFilter}`}
                            class="p-2 bg-slate-50 border border-slate-100 rounded-xl hover:border-brand-gold hover:text-brand-gold transition-all"
                        >
                            <ChevronLeft className="w-4 h-4" />
                        </a>
                    )}

                    {page < totalPages && (
                        <a
                            href={`?page=${page + 1}&search=${searchFilter}`}
                            class="p-2 bg-slate-50 border border-slate-100 rounded-xl hover:border-brand-gold hover:text-brand-gold transition-all"
                        >
                            <ChevronRight className="w-4 h-4" />
                        </a>
                    )}
                </div>
            </div>
        )
    }
</AdminLayout>
