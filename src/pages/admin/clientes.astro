---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabaseAdmin } from "../../lib/supabase";
import {
    Users,
    Search,
    Mail,
    Calendar,
    ShoppingBag,
    ArrowUpRight,
    ChevronLeft,
    ChevronRight,
    UserCircle,
} from "lucide-react";

export const prerender = false;

// PaginaciÃ³n
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get("page") || "1");
const pageSize = 12;
const from = (page - 1) * pageSize;
const to = from + pageSize - 1;

// BÃºsqueda
const searchFilter = url.searchParams.get("search") || "";

// Consulta simplificada (SIN JOIN con user_notification_preferences)
let query = supabaseAdmin
    .from("profiles")
    .select("*", { count: "exact" })
    .order("created_at", { ascending: false });

if (searchFilter) {
    query = query.or(
        `full_name.ilike.%${searchFilter}%,email.ilike.%${searchFilter}%`,
    );
}

const { data: clients, count, error } = await query.range(from, to);

if (error) {
    console.error("Error fetching clients:", error);
}

const totalPages = Math.ceil((count || 0) / pageSize);
---

<AdminLayout title="Clientes">
    <div
        class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8"
    >
        <div>
            <h1 class="text-2xl font-bold text-slate-800 font-serif italic">
                Base de Clientes
            </h1>
            <p class="text-sm text-slate-500">
                Gestiona los usuarios registrados y sus preferencias de
                marketing.
            </p>
        </div>

        <div
            class="bg-white px-4 py-2 rounded-2xl border border-slate-100 flex items-center gap-2 shadow-sm italic text-xs font-bold text-slate-500"
        >
            <Users className="w-4 h-4 text-brand-gold" />
            <span>Usuarios: {count || 0}</span>
        </div>
    </div>

    <!-- Buscador -->
    <div
        class="bg-white rounded-3xl p-4 border border-slate-100 shadow-sm mb-8"
    >
        <form class="relative">
            <Search
                className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400"
            />
            <input
                type="text"
                name="search"
                value={searchFilter}
                placeholder="Buscar por nombre o email..."
                class="w-full bg-slate-50 border-none rounded-2xl py-3 pl-11 pr-4 text-sm focus:ring-2 focus:ring-brand-gold transition-all"
            />
            <button type="submit" class="hidden">Buscar</button>
        </form>
    </div>

    <!-- Tabla de Clientes -->
    <div
        class="bg-white rounded-3xl border border-slate-100 shadow-sm overflow-hidden border-t-4 border-t-brand-gold"
    >
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-slate-50/50 border-b border-slate-100">
                        <th
                            class="text-left py-4 px-6 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic"
                            >Usuario</th
                        >
                        <th
                            class="text-left py-4 px-6 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic"
                            >Contacto</th
                        >
                        <th
                            class="text-left py-4 px-6 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic"
                            >Rol</th
                        >
                        <th
                            class="text-left py-4 px-6 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic"
                            >Fecha Registro</th
                        >
                        <th
                            class="text-right py-4 px-6 text-[10px] uppercase tracking-widest text-slate-400 font-bold italic"
                            >Acciones</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    {
                        clients?.map((client) => (
                            <tr class="hover:bg-slate-50/50 transition-colors group">
                                <td class="py-4 px-6">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 overflow-hidden border border-slate-200">
                                            {client.avatar_url ? (
                                                <img
                                                    src={client.avatar_url}
                                                    alt={client.full_name}
                                                    class="w-full h-full object-cover"
                                                />
                                            ) : (
                                                <UserCircle className="w-6 h-6" />
                                            )}
                                        </div>
                                        <div>
                                            <p class="text-sm font-bold text-slate-800">
                                                {client.full_name ||
                                                    "Sin nombre"}
                                            </p>
                                            <p class="text-[10px] text-slate-400 font-mono">
                                                ID: {client.id.slice(0, 8)}...
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-4 px-6">
                                    <div class="flex flex-col">
                                        <div class="flex items-center gap-1.5 text-xs font-medium text-slate-600">
                                            <Mail className="w-3 h-3 text-slate-400" />
                                            {client.email}
                                        </div>
                                        {client.phone && (
                                            <div class="flex items-center gap-1.5 text-[10px] text-slate-500 mt-1">
                                                <span>ðŸ“ž</span> {client.phone}
                                            </div>
                                        )}
                                    </div>
                                </td>
                                <td class="py-4 px-6">
                                    <span
                                        class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                                            client.role === "admin"
                                                ? "bg-purple-100 text-purple-800 border border-purple-200"
                                                : "bg-blue-100 text-blue-800 border border-blue-200"
                                        }`}
                                    >
                                        {client.role === "admin"
                                            ? "Administrador"
                                            : "Cliente"}
                                    </span>
                                </td>
                                <td class="py-4 px-6">
                                    <div class="flex items-center gap-1.5 text-xs text-slate-500">
                                        <Calendar className="w-3 h-3 text-brand-gold" />
                                        {new Date(
                                            client.created_at,
                                        ).toLocaleDateString("es-ES", {
                                            year: "numeric",
                                            month: "short",
                                            day: "numeric",
                                        })}
                                    </div>
                                </td>
                                <td class="py-4 px-6 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <button
                                            class="p-2 text-slate-400 hover:text-brand-gold hover:bg-amber-50 rounded-xl transition-all"
                                            title="Ver detalles"
                                        >
                                            <ArrowUpRight className="w-4 h-4" />
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        ))
                    }

                    {
                        (!clients || clients.length === 0) && (
                            <tr>
                                <td colspan="5" class="py-16 text-center">
                                    <Users className="w-12 h-12 text-slate-200 mx-auto mb-4" />
                                    <p class="text-slate-400 text-sm italic">
                                        No se encontraron clientes.
                                    </p>
                                </td>
                            </tr>
                        )
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PaginaciÃ³n -->
    {
        totalPages > 1 && (
            <div class="flex items-center justify-between bg-white px-8 py-4 rounded-3xl border border-slate-100 shadow-sm italic">
                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                    PÃ¡gina {page} de {totalPages}
                </span>

                <div class="flex items-center gap-2">
                    {page > 1 && (
                        <a
                            href={`?page=${page - 1}&search=${searchFilter}`}
                            class="p-2 bg-slate-50 border border-slate-100 rounded-xl hover:border-brand-gold hover:text-brand-gold transition-all"
                        >
                            <ChevronLeft className="w-4 h-4" />
                        </a>
                    )}

                    {page < totalPages && (
                        <a
                            href={`?page=${page + 1}&search=${searchFilter}`}
                            class="p-2 bg-slate-50 border border-slate-100 rounded-xl hover:border-brand-gold hover:text-brand-gold transition-all"
                        >
                            <ChevronRight className="w-4 h-4" />
                        </a>
                    )}
                </div>
            </div>
        )
    }
</AdminLayout>
