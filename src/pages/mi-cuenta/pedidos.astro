---
import PublicLayout from '../../layouts/PublicLayout.astro';
import { getAuthenticatedUser, createSupabaseServerClient } from '../../lib/supabase-server';
import { ShoppingBag, Calendar, MapPin, ChevronRight, Package, Truck, ArrowLeft, XCircle } from 'lucide-react';
import { formatPrice } from '../../lib/utils';
// ... imports done above

export const prerender = false;

// Verificar autenticación
const user = await getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login?redirect=/mi-cuenta/pedidos');
}

const supabaseServer = createSupabaseServerClient(Astro.cookies);

// Obtener pedidos del usuario
const { data: orders, error } = await supabaseServer
  .from('orders')
  .select(`
    *,
    order_items (
      *,
      product_name
    )
  `)
  .eq('user_id', user.id)
  .order('created_at', { ascending: false });

const getStatusColor = (status: string) => {
  switch (status) {
    case 'paid':
    case 'confirmed':
      return 'bg-emerald-100 text-emerald-700 border-emerald-200';
    case 'pending':
      return 'bg-amber-100 text-amber-700 border-amber-200';
    case 'shipped':
      return 'bg-blue-100 text-blue-700 border-blue-200';
    case 'delivered':
      return 'bg-gray-100 text-gray-700 border-gray-200';
    case 'cancelled':
      return 'bg-red-100 text-red-700 border-red-200';
    default:
      return 'bg-slate-100 text-slate-700 border-slate-200';
  }
};

const getStatusText = (status: string) => {
  switch (status) {
    case 'paid':
    case 'confirmed':
      return 'Confirmado';
    case 'pending':
      return 'Pendiente';
    case 'shipped':
      return 'Enviado';
    case 'delivered':
      return 'Entregado';
    case 'cancelled':
      return 'Cancelado';
    default:
      return 'Desconocido';
  }
};
---

<PublicLayout title="Mis Pedidos">
  <div class="pt-32 pb-16">
    <div class="max-w-5xl mx-auto px-6">
      
      <!-- Navegación -->
      <a href="/mi-cuenta/preferencias" class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-brand-navy transition-colors mb-8">
        <ArrowLeft className="w-4 h-4" />
        Volver a mi cuenta
      </a>

      <!-- Cabecera -->
      <div class="flex items-center justify-between mb-12">
        <div class="flex items-center gap-4">
          <div class="w-14 h-14 bg-brand-gold text-white rounded-full flex items-center justify-center shadow-lg shadow-brand-gold/20">
            <ShoppingBag className="w-7 h-7" />
          </div>
          <div>
            <h1 class="text-4xl font-serif italic text-brand-navy">Mis Pedidos</h1>
            <p class="text-slate-500 mt-1">Historial de tus compras recientes</p>
          </div>
        </div>
      </div>

      <!-- Lista de pedidos -->
      <div class="space-y-6">
        {!orders || orders.length === 0 ? (
          <div class="bg-white rounded-2xl p-16 text-center border border-slate-100 shadow-sm">
            <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6">
              <ShoppingBag className="w-8 h-8 text-slate-300" />
            </div>
            <h3 class="text-xl font-medium text-brand-navy mb-2">No tienes pedidos aún</h3>
            <p class="text-slate-400 mb-8 max-w-md mx-auto">Explora nuestra colección y encuentra prendas exclusivas para tu estilo.</p>
            <a href="/productos" class="inline-flex items-center justify-center px-8 py-3 bg-brand-navy text-white font-bold uppercase tracking-widest text-xs hover:bg-black transition-all">
              Ir a la tienda
            </a>
          </div>
        ) : (
          orders.map((order) => (
            <div class="bg-white rounded-2xl overflow-hidden border border-slate-200 shadow-sm transition-shadow hover:shadow-md">
              <!-- Encabezado del pedido -->
              <div class="bg-slate-50/50 p-6 border-b border-slate-100 flex flex-wrap gap-6 items-center justify-between">
                <div class="flex gap-8">
                  <div>
                    <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">Pedido realizado</p>
                    <div class="flex items-center gap-2 text-slate-700 font-medium text-sm">
                      <Calendar className="w-4 h-4 text-brand-gold" />
                      {new Date(order.created_at).toLocaleDateString('es-ES', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                      })}
                    </div>
                  </div>
                  <div>
                    <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">Total</p>
                    <p class="font-serif italic font-bold text-brand-navy">{formatPrice(order.total_amount)}</p>
                  </div>
                  <div>
                    <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">Enviar a</p>
                    <p class="text-sm font-medium text-slate-700 max-w-[200px] truncate" title={order.shipping_address}>
                      {order.shipping_address}
                    </p>
                  </div>
                </div>
                
                <div class="flex items-center gap-4">
                  <span class={`px-3 py-1 rounded-full text-xs font-bold border ${getStatusColor(order.status)}`}>
                    {getStatusText(order.status)}
                  </span>
                  <div class="w-px h-8 bg-slate-200 hidden sm:block"></div>
                  <span class="text-xs text-slate-400 font-mono">#{order.id.slice(0, 8)}</span>
                </div>
              </div>

              <!-- Items del pedido -->
              <div class="p-6">
                <div class="space-y-6">
                  {order.order_items.map((item: any) => (
                    <div class="flex items-center gap-6">
                      <div class="w-16 h-16 bg-slate-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <Package className="w-8 h-8 text-slate-300" />
                      </div>
                      <div class="flex-1">
                        <h4 class="font-serif italic text-lg text-brand-navy">{item.product_name}</h4>
                        <div class="flex items-center gap-4 mt-1">
                          <p class="text-sm text-slate-500">Cantidad: {item.quantity}</p>
                          <p class="text-sm font-bold text-slate-700">{formatPrice(item.price_at_purchase || item.unit_price || 0)}</p>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
                
                  <div class="mt-8 pt-6 border-t border-slate-100 flex justify-end gap-3 flex-wrap">
                      {order.status !== 'cancelled' ? (
                        <>
                          {(['pending', 'paid', 'confirmed', 'processing'].includes(order.status)) && (
                              <a href={`/mi-cuenta/pedido/${order.id}`} class="text-xs font-bold uppercase tracking-widest text-red-500 hover:text-red-700 transition-colors flex items-center gap-2 border border-red-200 px-4 py-2 rounded-lg hover:bg-red-50">
                                <XCircle className="w-4 h-4" />
                                Devolver
                              </a>
                          )}
                          <a href={`/mi-cuenta/pedido/${order.id}`} class="text-xs font-bold uppercase tracking-widest text-brand-navy hover:text-brand-gold transition-colors flex items-center gap-2 border border-brand-navy/20 px-4 py-2 rounded-lg hover:border-brand-gold">
                            <Truck className="w-4 h-4" />
                            Rastrear
                          </a>
                        </>
                      ) : (
                          <span class="text-xs font-bold uppercase tracking-widest text-red-500 flex items-center gap-2 px-4 py-2 bg-red-50 rounded-lg border border-red-100">
                            <XCircle className="w-4 h-4" />
                            Pedido Cancelado
                          </span>
                      )}
                  </div>
              </div>
            </div>
          ))
        )}
      </div>
    </div>
  </div>
</PublicLayout>
