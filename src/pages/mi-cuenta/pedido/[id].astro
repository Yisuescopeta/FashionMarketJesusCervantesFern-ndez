---
import PublicLayout from '../../../layouts/PublicLayout.astro';
import { getAuthenticatedUser, createSupabaseServerClient } from '../../../lib/supabase-server';
import { formatPrice } from '../../../lib/utils';
import { ArrowLeft, Package, Truck, CheckCircle, AlertCircle, XCircle, Clock, MapPin } from 'lucide-react';

export const prerender = false;

const { id } = Astro.params;

// 1. Verificar autenticación
const user = await getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect(`/login?redirect=/mi-cuenta/pedido/${id}`);
}

const supabaseServer = createSupabaseServerClient(Astro.cookies);

// 2. Obtener detalles del pedido
const { data: order, error } = await supabaseServer
  .from('orders')
  .select(`
    *,
    order_items (
      *,
      product_name
    )
  `)
  .eq('id', id)
  .eq('user_id', user.id)
  .single();

if (error || !order) {
  return Astro.redirect('/mi-cuenta/pedidos');
}

// Lógica de estados para el Timeline
const steps = [
  { status: 'pending', label: 'Pedido Realizado', icon: Clock },
  { status: 'confirmed', label: 'Confirmado', icon: CheckCircle },
  { status: 'shipped', label: 'Enviado', icon: Truck },
  { status: 'delivered', label: 'Entregado', icon: Package },
];

// Determinar índice actual
let currentStepIndex = 0;
if (order.status === 'confirmed' || order.status === 'paid' || order.status === 'processing') currentStepIndex = 1;
if (order.status === 'shipped') currentStepIndex = 2;
if (order.status === 'delivered') currentStepIndex = 3;

// ¿Es cancelable?
const isCancellable = ['pending', 'paid', 'confirmed', 'processing'].includes(order.status);
const isCancelled = order.status === 'cancelled';

---

<PublicLayout title={`Pedido #${order.id.slice(0, 8)}`}>
  <div class="pt-32 pb-16 bg-slate-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-6">
      
      <!-- Navegación -->
      <a href="/mi-cuenta/pedidos" class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-brand-navy transition-colors mb-8">
        <ArrowLeft className="w-4 h-4" />
        Volver a mis pedidos
      </a>

      <div class="flex flex-col md:flex-row gap-6 items-start justify-between mb-8">
        <div>
           <div class="flex items-center gap-4 mb-2">
             <h1 class="text-3xl font-serif italic text-brand-navy">Pedido #{order.id.slice(0, 8)}</h1>
             {isCancelled && (
                 <span class="px-3 py-1 bg-red-100 text-red-700 text-xs font-bold uppercase tracking-wider rounded-full border border-red-200">
                     Cancelado
                 </span>
             )}
           </div>
           <p class="text-slate-500 text-sm">Realizado el {new Date(order.created_at).toLocaleDateString('es-ES', { 
              year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' 
           })}</p>
        </div>
        
        {isCancellable && (
            <button 
                id="btn-cancelar"
                class="bg-white border border-red-200 text-red-600 hover:bg-red-50 px-6 py-2 text-xs font-bold uppercase tracking-widest transition-colors flex items-center gap-2"
            >
                <XCircle className="w-4 h-4" />
                Cancelar / Devolver
            </button>
        )}
      </div>

      <!-- TIMELINE DE SEGUIMIENTO -->
      {!isCancelled && (
        <div class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm mb-8 overflow-hidden">
            <h3 class="text-sm font-bold uppercase tracking-widest text-slate-400 mb-8">Seguimiento del Envío</h3>
            
            <div class="relative">
                <!-- Línea conectora -->
                <div class="absolute top-1/2 left-0 w-full h-1 bg-slate-100 -translate-y-1/2 hidden md:block"></div>
                
                {/* Barra de progreso */}
                <div 
                    class="absolute top-1/2 left-0 h-1 bg-brand-gold -translate-y-1/2 hidden md:block transition-all duration-1000" 
                    style={`width: ${(currentStepIndex / (steps.length - 1)) * 100}%`}
                ></div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-8 relative z-10">
                    {steps.map((step, index) => {
                        // Logic moved to simpler expression to avoid parser issues
                        return (
                            <div class={`flex flex-col items-center text-center ${index <= currentStepIndex ? 'text-brand-navy' : 'text-slate-300'}`}>
                                <div class={`w-12 h-12 rounded-full flex items-center justify-center mb-4 transition-all duration-500 border-4 
                                    ${index <= currentStepIndex ? 'bg-brand-navy border-brand-gold text-white shadow-lg' : 'bg-white border-slate-100'}`}>
                                    <step.icon className="w-5 h-5" />
                                </div>
                                <span class={`text-xs font-bold uppercase tracking-widest ${index === currentStepIndex ? 'text-brand-gold' : ''}`}>
                                    {step.label}
                                </span>
                                {index === currentStepIndex && order.estimated_delivery && (
                                    <span class="text-[10px] text-slate-500 mt-1">
                                        Est. {new Date(order.estimated_delivery).toLocaleDateString()}
                                    </span>
                                )}
                            </div>
                        );
                    })}
                </div>
            </div>

            {order.tracking_number && (
                <div class="mt-8 pt-6 border-t border-slate-100 flex items-center justify-between bg-slate-50 p-4 rounded-lg">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-sm">
                            <Truck className="w-5 h-5 text-brand-navy" />
                        </div>
                        <div>
                            <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold">Número de Seguimiento</p>
                            <p class="font-mono text-sm font-bold text-brand-navy">{order.tracking_number}</p>
                            <p class="text-xs text-slate-500">{order.carrier || 'Transportista estandar'}</p>
                        </div>
                    </div>
                </div>
            )}
        </div>
      )}

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- DETALLES DEL PEDIDO -->
          <div class="lg:col-span-2 space-y-6">
              <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
                  <div class="bg-slate-50 px-6 py-4 border-b border-slate-100">
                      <h3 class="text-sm font-bold uppercase tracking-widest text-slate-700">Artículos ({order.order_items.length})</h3>
                  </div>
                  <div class="divide-y divide-slate-100">
                      {order.order_items.map((item) => (
                          <div class="p-6 flex items-start gap-6">
                              <div class="w-20 h-24 bg-slate-100 rounded-lg flex-shrink-0 flex items-center justify-center">
                                  <Package className="w-8 h-8 text-slate-300" />
                              </div>
                              <div class="flex-1">
                                  <h4 class="font-serif italic text-lg text-brand-navy">{item.product_name}</h4>
                                  {item.size && <p class="text-xs text-slate-500 mt-1">Talla: <span class="font-bold">{item.size}</span></p>}
                                  <p class="text-xs text-slate-500">Cantidad: {item.quantity}</p>
                              </div>
                              <div class="text-right">
                                  <p class="font-bold text-slate-700">{formatPrice(item.price_at_purchase || item.unit_price || 0)}</p>
                              </div>
                          </div>
                      ))}
                  </div>
                  <div class="bg-slate-50 px-6 py-4 border-t border-slate-100">
                      <div class="flex justify-between items-center">
                          <span class="text-sm font-bold uppercase tracking-widest text-slate-500">Total Pagado</span>
                          <span class="text-2xl font-serif italic text-brand-navy font-bold">{formatPrice(order.total_amount)}</span>
                      </div>
                  </div>
              </div>
          </div>

          <!-- INFORMACIÓN DE ENVÍO -->
          <div class="space-y-6">
              <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
                  <h3 class="text-sm font-bold uppercase tracking-widest text-slate-400 mb-6 flex items-center gap-2">
                      <MapPin className="w-4 h-4" /> Dirección de Envío
                  </h3>
                  <div class="text-sm text-slate-600 leading-relaxed">
                      <p class="font-bold text-brand-navy mb-1">{order.customer_email}</p>
                      <p>{order.shipping_address}</p>
                      <p>{order.shipping_postal_code}, {order.shipping_city}</p>
                      {order.shipping_phone && <p class="mt-2 text-slate-400">{order.shipping_phone}</p>}
                  </div>
                  {order.notes && (
                      <div class="mt-6 pt-4 border-t border-slate-100">
                          <p class="text-xs text-slate-400 uppercase font-bold mb-1">Notas</p>
                          <p class="text-xs text-slate-500 italic">"{order.notes}"</p>
                      </div>
                  )}
              </div>
              
              <div class="bg-indigo-50 rounded-2xl border border-indigo-100 p-6">
                  <h3 class="text-sm font-bold uppercase tracking-widest text-indigo-800 mb-2">Ayuda</h3>
                  <p class="text-xs text-indigo-600 mb-4">¿Tienes algún problema con tu pedido? Contáctanos.</p>
                  <a href="mailto:soporte@fashionmarket.com" class="text-xs font-bold underline text-indigo-700 hover:text-indigo-900">
                      soporte@fashionmarket.com
                  </a>
              </div>
          </div>
      </div>
    </div>
  </div>

  <!-- MODAL DE CANCELACIÓN -->
  <dialog id="cancel-modal" class="rounded-2xl shadow-2xl p-0 backdrop:bg-black/50 w-full max-w-md">
      <div class="p-8 text-center">
          <div class="w-16 h-16 bg-red-50 rounded-full flex items-center justify-center mx-auto mb-6">
              <AlertCircle className="w-8 h-8 text-red-500" />
          </div>
          <h3 class="text-xl font-serif italic text-brand-navy mb-2">¿Cancelar Pedido?</h3>
          <p class="text-sm text-slate-500 mb-6">
              Si cancelas ahora, se procesará el reembolso completo a tu método de pago original en 3-5 días hábiles. Esta acción no se puede deshacer.
          </p>
          
          <form method="dialog" id="cancel-form">
              <div class="mb-4 text-left">
                  <label class="block text-xs uppercase font-bold text-slate-500 mb-2">Motivo (Opcional)</label>
                  <select name="reason" class="w-full border border-slate-200 rounded-lg p-2 text-sm bg-slate-50">
                      <option value="change_of_mind">He cambiado de opinión</option>
                      <option value="wrong_item">Pedí el artículo equivocado</option>
                      <option value="found_cheaper">Lo encontré más barato</option>
                      <option value="other">Otro motivo</option>
                  </select>
              </div>
              
              <div class="flex gap-3 justify-center">
                  <button type="button" onclick="document.getElementById('cancel-modal').close()" class="px-6 py-3 border border-slate-200 rounded-lg text-sm font-bold text-slate-600 hover:bg-slate-50 transition-colors">
                      Volver
                  </button>
                  <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-lg text-sm font-bold hover:bg-red-700 transition-colors shadow-lg shadow-red-200">
                      Confirmar Cancelación
                  </button>
              </div>
          </form>
      </div>
  </dialog>

</PublicLayout>

<script define:vars={{ orderId: id }}>
    const btnCancel = document.querySelector('#btn-cancelar');
    const modal = document.querySelector('#cancel-modal');
    const form = document.querySelector('#cancel-form');

    if (btnCancel && modal) {
        btnCancel.addEventListener('click', () => {
            modal.showModal();
        });
    }

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const reason = form.querySelector('select')?.value;
            const submitBtn = form.querySelector('button[type="submit"]');
            
            // Loading state
            const originalText = submitBtn.textContent;
            submitBtn.textContent = 'Procesando...';
            submitBtn.disabled = true;

            try {
                const response = await fetch('/api/orders/return', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ orderId, reason })
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Pedido cancelado correctamente');
                    window.location.reload();
                } else {
                    alert(result.error || 'Error al cancelar');
                    submitBtn.textContent = originalText;
                    submitBtn.disabled = false;
                    modal.close();
                }
            } catch (error) {
                console.error(error);
                alert('Error de conexión');
                submitBtn.textContent = originalText;
                submitBtn.disabled = false;
            }
        });
    }
</script>
