---
// Página de registro para nuevos usuarios
// Los usuarios nuevos siempre tienen rol 'customer' por defecto (definido en la BD)
import PublicLayout from "../layouts/PublicLayout.astro";
import { User, Mail, Lock, UserPlus } from "lucide-react";

export const prerender = false;
---

<PublicLayout title="Crear Cuenta">
    <div class="min-h-[80vh] flex items-center justify-center px-6 py-24">
        <div class="max-w-md w-full">
            <div class="text-center mb-10">
                <h2 class="text-[10px] uppercase tracking-[0.4em] text-brand-gold font-bold mb-4">
                    Únete a Nosotros
                </h2>
                <h1 class="text-4xl font-serif italic mb-2">Crear Cuenta</h1>
                <p class="text-slate-400 text-sm">
                    Regístrate para disfrutar de una experiencia personalizada
                </p>
            </div>

            <div class="bg-white border border-slate-100 shadow-sm p-8">
                <!-- Botón de Google OAuth -->
                <button
                    id="google-btn"
                    type="button"
                    class="w-full flex items-center justify-center gap-3 border-2 border-slate-200 py-4 px-6 font-medium text-slate-700 hover:bg-slate-50 hover:border-slate-300 transition-all duration-300 mb-6"
                >
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Registrarse con Google</span>
                </button>

                <!-- Separador -->
                <div class="relative mb-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-200"></div>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                        <span class="bg-white px-4 text-slate-400 tracking-widest">o con email</span>
                    </div>
                </div>

                <form id="register-form" class="space-y-6">
                    <div class="space-y-2">
                        <label class="text-[10px] uppercase tracking-widest font-bold text-slate-500">
                            Nombre Completo
                        </label>
                        <div class="relative">
                            <User className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300" />
                            <input
                                type="text"
                                name="fullName"
                                required
                                class="w-full border border-slate-200 p-3 pl-12 focus:ring-2 focus:ring-brand-gold focus:border-brand-gold outline-none transition"
                                placeholder="Tu nombre"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] uppercase tracking-widest font-bold text-slate-500">
                            Correo Electrónico
                        </label>
                        <div class="relative">
                            <Mail className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300" />
                            <input
                                type="email"
                                name="email"
                                required
                                class="w-full border border-slate-200 p-3 pl-12 focus:ring-2 focus:ring-brand-gold focus:border-brand-gold outline-none transition"
                                placeholder="tu@email.com"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] uppercase tracking-widest font-bold text-slate-500">
                            Contraseña
                        </label>
                        <div class="relative">
                            <Lock className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300" />
                            <input
                                type="password"
                                name="password"
                                required
                                minlength="8"
                                class="w-full border border-slate-200 p-3 pl-12 focus:ring-2 focus:ring-brand-gold focus:border-brand-gold outline-none transition"
                                placeholder="Mínimo 8 caracteres"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] uppercase tracking-widest font-bold text-slate-500">
                            Confirmar Contraseña
                        </label>
                        <div class="relative">
                            <Lock className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300" />
                            <input
                                type="password"
                                name="confirmPassword"
                                required
                                minlength="8"
                                class="w-full border border-slate-200 p-3 pl-12 focus:ring-2 focus:ring-brand-gold focus:border-brand-gold outline-none transition"
                                placeholder="Repite tu contraseña"
                            />
                        </div>
                    </div>

                    <div id="error-msg" class="text-red-500 text-xs italic text-center hidden"></div>
                    <div id="success-msg" class="text-green-600 text-xs italic text-center hidden"></div>

                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full bg-brand-navy text-white py-4 font-bold uppercase tracking-widest text-sm hover:bg-black transition-all duration-300 flex items-center justify-center space-x-2"
                    >
                        <UserPlus className="w-5 h-5" />
                        <span>Crear Cuenta</span>
                    </button>
                </form>

                <div class="mt-8 pt-6 border-t border-slate-100 text-center">
                    <p class="text-sm text-slate-500">
                        ¿Ya tienes cuenta?
                        <a href="/login" class="text-brand-gold font-bold hover:underline ml-1">
                            Iniciar sesión
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</PublicLayout>

<script>
    import { supabase } from "../lib/supabase";

    const form = document.getElementById("register-form") as HTMLFormElement;
    const errorMsg = document.getElementById("error-msg");
    const successMsg = document.getElementById("success-msg");
    const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
    const googleBtn = document.getElementById("google-btn") as HTMLButtonElement;

    // Verificar si ya está autenticado
    async function checkAuth() {
        const { data: { user } } = await supabase.auth.getUser();
        if (user) {
            window.location.href = "/";
        }
    }
    checkAuth();

    // Registro con Google OAuth
    googleBtn?.addEventListener("click", async () => {
        googleBtn.disabled = true;
        googleBtn.innerHTML = `
            <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Conectando...</span>
        `;

        const { error } = await supabase.auth.signInWithOAuth({
            provider: 'google',
            options: {
                redirectTo: `${window.location.origin}/auth/callback`,
            }
        });

        if (error) {
            console.error("Error con Google OAuth:", error);
            googleBtn.disabled = false;
            googleBtn.innerHTML = `
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span>Registrarse con Google</span>
            `;
            if (errorMsg) {
                errorMsg.textContent = "Error al conectar con Google. Inténtalo de nuevo.";
                errorMsg.classList.remove("hidden");
            }
        }
    });

    // Registro con email/contraseña
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const fullName = formData.get("fullName") as string;
        const email = formData.get("email") as string;
        const password = formData.get("password") as string;
        const confirmPassword = formData.get("confirmPassword") as string;

        // Validación de contraseñas
        if (password !== confirmPassword) {
            if (errorMsg) {
                errorMsg.textContent = "Las contraseñas no coinciden.";
                errorMsg.classList.remove("hidden");
            }
            return;
        }

        if (password.length < 8) {
            if (errorMsg) {
                errorMsg.textContent = "La contraseña debe tener al menos 8 caracteres.";
                errorMsg.classList.remove("hidden");
            }
            return;
        }

        // Deshabilitar botón mientras procesa
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span>Creando cuenta...</span>';
        errorMsg?.classList.add("hidden");

        // Registro con Supabase - el trigger creará el perfil con rol 'customer'
        const { error } = await supabase.auth.signUp({
            email,
            password,
            options: {
                data: {
                    full_name: fullName,
                },
            },
        });

        if (error) {
            if (errorMsg) {
                if (error.message.includes("already registered")) {
                    errorMsg.textContent = "Este email ya está registrado. Intenta iniciar sesión.";
                } else {
                    errorMsg.textContent = "Error al crear la cuenta. Inténtalo de nuevo.";
                }
                errorMsg.classList.remove("hidden");
            }
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<span>Crear Cuenta</span>';
        } else {
            if (successMsg) {
                successMsg.textContent = "¡Cuenta creada! Revisa tu email para confirmar tu cuenta.";
                successMsg.classList.remove("hidden");
            }
            form.reset();
            
            // Redirigir después de 3 segundos
            setTimeout(() => {
                window.location.href = "/login";
            }, 3000);
        }
    });
</script>
