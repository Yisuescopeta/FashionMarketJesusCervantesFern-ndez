---
import BaseLayout from './BaseLayout.astro';
import { ShoppingBag, LogOut, Package, Tag, Users } from 'lucide-react';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={`Admin | ${title}`}>
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-brand-navy text-white flex flex-col fixed h-full transition-all">
      <div class="p-6">
        <h1 class="text-xl font-serif font-bold tracking-tight">FASHION<span class="text-brand-gold">ADMIN</span></h1>
      </div>
      
      <nav class="flex-1 mt-6 px-4 space-y-2">
        <a href="/admin" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-white/10 transition">
          <Package className="w-5 h-5" />
          <span>Dashboard</span>
        </a>
        <a href="/admin/productos" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-white/10 transition">
          <Tag className="w-5 h-5" />
          <span>Inventario</span>
        </a>
        <a href="/admin/ofertas" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-white/10 transition text-orange-400">
          <ShoppingBag className="w-5 h-5" />
          <span>Ofertas Flash</span>
        </a>
        <a href="/admin/usuarios" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-white/10 transition">
          <Users className="w-5 h-5" />
          <span>Clientes</span>
        </a>
      </nav>

      <div class="p-4 border-t border-slate-700">
        <button class="flex items-center space-x-3 p-3 w-full rounded-lg hover:bg-red-500/20 text-red-400 transition">
          <LogOut className="w-5 h-5" />
          <span>Cerrar Sesión</span>
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-64 p-8 bg-slate-50">
      <header class="mb-12 flex justify-between items-center">
        <h2 class="text-3xl font-serif font-bold">{title}</h2>
        <div class="flex items-center space-x-4">
          <div class="text-right">
            <p class="text-sm font-bold">Administrador</p>
            <p class="text-[10px] uppercase text-slate-500 tracking-widest">Sesión Activa</p>
          </div>
          <div class="w-10 h-10 bg-brand-gold rounded-full flex items-center justify-center text-white font-bold">
            A
          </div>
        </div>
      </header>
      
      <slot />
    </main>
  </div>
</BaseLayout>
