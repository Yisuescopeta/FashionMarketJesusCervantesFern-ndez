---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import CartSlider from '../components/islands/CartSlider';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Header />
  <main class="min-h-screen pt-28">
    <slot />
  </main>
  <CartSlider client:load />
  
  <!-- Footer con animaciones y efectos -->
  <footer class="footer-section bg-brand-navy text-white py-16 px-6 mt-20 relative overflow-hidden">
    <!-- Efecto de fondo decorativo -->
    <div class="footer-bg-effect absolute inset-0 opacity-10">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-brand-gold rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-brand-gold rounded-full filter blur-3xl"></div>
    </div>
    
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 relative z-10">
      <!-- Logo y descripción -->
      <div class="scroll-animate">
        <div class="flex items-center gap-3 mb-4">
          <img src="/logo-aurum.jpg" alt="Aurum" class="w-12 h-auto rounded" />
          <h2 class="text-2xl font-serif text-gradient">Aurum</h2>
        </div>
        <p class="text-slate-400 leading-relaxed">
          Minimalismo sofisticado para el hombre moderno. Elegancia atemporal en cada prenda.
        </p>
        <!-- Redes sociales -->
        <div class="flex gap-4 mt-6">
          <a href="#" class="social-icon w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-brand-gold hover:text-brand-navy transition-all duration-300 hover:scale-110">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
          </a>
          <a href="#" class="social-icon w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-brand-gold hover:text-brand-navy transition-all duration-300 hover:scale-110">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
          <a href="#" class="social-icon w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-brand-gold hover:text-brand-navy transition-all duration-300 hover:scale-110">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/></svg>
          </a>
        </div>
      </div>
      
      <!-- Categorías -->
      <div class="scroll-animate delay-200">
        <h3 class="font-bold mb-6 text-lg relative inline-block">
          Categorías
          <span class="absolute -bottom-1 left-0 w-12 h-0.5 bg-brand-gold"></span>
        </h3>
        <ul class="space-y-3 text-slate-400">
          <li>
            <a href="/categoria/camisas" class="footer-link group flex items-center gap-2 hover:text-brand-gold transition-all duration-300">
              <span class="w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-4"></span>
              Camisas
            </a>
          </li>
          <li>
            <a href="/categoria/camisetas" class="footer-link group flex items-center gap-2 hover:text-brand-gold transition-all duration-300">
              <span class="w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-4"></span>
              Camisetas
            </a>
          </li>
          <li>
            <a href="/categoria/chalecos" class="footer-link group flex items-center gap-2 hover:text-brand-gold transition-all duration-300">
              <span class="w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-4"></span>
              Chalecos
            </a>
          </li>
          <li>
            <a href="/categoria/pantalones" class="footer-link group flex items-center gap-2 hover:text-brand-gold transition-all duration-300">
              <span class="w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-4"></span>
              Pantalones
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Ayuda -->
      <div class="scroll-animate delay-400">
        <h3 class="font-bold mb-6 text-lg relative inline-block">
          Ayuda
          <span class="absolute -bottom-1 left-0 w-12 h-0.5 bg-brand-gold"></span>
        </h3>
        <ul class="space-y-3 text-slate-400">
          <li>
            <a href="/seguimiento" class="footer-link group flex items-center gap-2 hover:text-brand-gold transition-all duration-300">
              <span class="w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-4"></span>
              Seguimiento de Pedidos
            </a>
          </li>
          <li>
            <a href="mailto:info@aurum.com" class="footer-link group flex items-center gap-2 hover:text-brand-gold transition-all duration-300">
              <span class="w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-4"></span>
              info@aurum.com
            </a>
          </li>
          <li>
            <a href="/devoluciones" class="footer-link group flex items-center gap-2 hover:text-brand-gold transition-all duration-300">
              <span class="w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-4"></span>
              Política de Devoluciones
            </a>
          </li>
        </ul>
        
        <!-- Newsletter mini -->
        <div class="mt-8">
          <p class="text-sm text-slate-400 mb-3">Suscríbete a nuestra newsletter</p>
          <div class="flex gap-2">
            <input 
              type="email" 
              placeholder="Tu email" 
              class="flex-1 px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-brand-gold transition-colors text-sm"
            />
            <button class="px-4 py-2 bg-brand-gold text-brand-navy font-semibold rounded-lg hover:bg-yellow-400 transition-all duration-300 hover:scale-105 text-sm">
              →
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Copyright con efecto -->
    <div class="max-w-7xl mx-auto border-t border-slate-800 mt-12 pt-8 text-center text-slate-500 text-sm relative z-10">
      <p class="animate-fade-in">
        © 2026 <span class="text-brand-gold">Aurum</span>. Todos los derechos reservados.
      </p>
      <p class="text-xs mt-2 text-slate-600">
        Diseñado con <span class="text-red-500">♥</span> para el hombre moderno
      </p>
    </div>
  </footer>
</BaseLayout>

<style>
  /* Animación del fondo del footer */
  .footer-bg-effect div {
    animation: float 8s ease-in-out infinite;
  }
  
  .footer-bg-effect div:nth-child(2) {
    animation-delay: -4s;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.1); }
  }
  
  /* Efecto hover en enlaces del footer */
  .footer-link {
    position: relative;
    padding-left: 0;
    transition: padding-left 0.3s ease;
  }
  
  .footer-link:hover {
    padding-left: 0.5rem;
  }
  
  /* Efecto en iconos sociales */
  .social-icon {
    position: relative;
    overflow: hidden;
  }
  
  .social-icon::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.3) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .social-icon:hover::before {
    opacity: 1;
  }
</style>
